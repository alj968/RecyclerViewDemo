<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
    <ImageView
        android:id="@+id/imageViewCourseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_tag_faces_black_24dp"
    />
    <TextView
        android:id="@+id/textViewCourseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/imageViewCourseImage"
        android:text="Pretend Course Title"
    />
    <TextView android:id="@+id/textViewCourseInstructor"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/textViewCourseTitle"
              android:layout_marginLeft="16dp"
              android:layout_toRightOf="@id/imageViewCourseImage"
              android:text="Pretend Course Instructor"
    />
</RelativeLayout>